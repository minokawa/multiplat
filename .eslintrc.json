{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings":{
    "react" : {
      "version": "^17.0.2"
    }
  },
  "rules": {
    "indent": [
        "warn",
        2
    ],
    "linebreak-style": [
        "warn",
        "unix"
    ],
    "quotes": [
        "warn",
        "single"
    ],
    "semi": [
        "warn",
        "always"
    ],
    "prefer-const": ["warn", {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
    }],
    "no-new-object": 1,
    "no-array-constructor" : 1,
    "prefer-destructuring" : 1,
    "prefer-template" : 1,
    "template-curly-spacing": 1,
    "object-shorthand": 1,
    "func-style" : 1,
    "no-loop-func" : 1,
    "no-param-reassign" : 1,
    "prefer-spread" : 1,
    "function-paren-newline" : 1
  }
}
